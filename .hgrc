[bookmarks]
track.current = True

[auth]
jb.prefix = http://hg.jetbrains.org
jb.username = Dmitry.Neverov

[alias]
log = log --style=/home/nd/dotfiles/mercurial-cli-templates/map-cmdline.slog 
llog = log --style=/home/nd/dotfiles/mercurial-cli-templates/map-cmdline.nlog 
glog = glog --style=/home/nd/dotfiles/mercurial-cli-templates/map-cmdline.sglog 
diff = diff -g
show = llog -pr

[pager]
pager = LESS='FSRX' less
attend = annotate, cat, diff, export, log, llog, glog, qdiff, show

[diff]
git=1

[color]
mode = ansi